    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pinner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pinner/main.go",
            "args": [
                "--debug"
            ],
            "env": {
                "TRUSTED_DIR": "${workspaceFolder}/test/data",
                "IPFS_LOGGING": "info"
            }
        },
        {
            "name": "Pinner CLI: STORE",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pinner-cli/main.go",
            "args": [
                "-mode", "store", "-data", "${workspaceFolder}/test/data/specimen.json"
            ]
        }
    ]
}